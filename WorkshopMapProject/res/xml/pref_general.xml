<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="@string/pref_settings_avoid_tolls"
        android:title="@string/pref_title_avoid_tolls" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="@string/pref_settings_avoid_highways"
        android:title="@string/pref_title_avoid_highways" />

    <ListPreference
        android:defaultValue="@string/none"
        android:entries="@array/pref_mode_travel_list"
        android:entryValues="@array/pref_mode_travel_list"
        android:key="@string/pref_settings_travel_modes"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_travel_modes" />

    <ListPreference
            android:defaultValue="0"
            android:entries="@array/pref_map_type"
            android:entryValues="@array/pref_map_type_value"
            android:key="@string/pref_settings_map_type"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_map_type" />
</PreferenceScreen>